<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <!--навигациооная панель-->
                <a class="navbar-brand" href="#">WEB</a>
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" asp-controller="Home" asp-action="Index">Laba 2</a>
                    <a class="nav-item nav-link" asp-controller="Product" asp-action="Index">Cataloge</a>
                    <a class="nav-item nav-link" asp-area="Admin" asp-page="/Index">Administration</a>
                </div>
                <!--информация пользователя-->
                <a asp-controller="Cart" asp-action="Index" class="navbar-text ml-auto">
                    0,00 руб <i class="fas fa-shopping-cart nav-color"></i> (0)
                </a>
                <div class="dropdown ml-4 nav-color">
                    <div class="dropdown-toggle" id="dropdownMenuButton"
                         data-toggle="dropdown" aria-haspopup="true"
                         aria-expanded="false">
                        <img src="/image/avatar.jpg" width="30" alt="User" class="rounded" />
                    </div>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <div class="dropdown-item-text">
                            <img src="/image/avatar.jpg" width="50" alt="User" class="rounded" />
                            user@mail.ru
                        </div>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Cart" asp-action="Index">Мои товары</a>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Выход</a>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <main class="container">
       @RenderBody();
    </main>
    <footer class=" fixed-bottom">
        <div class="container">
            <div class="navbar navbar-expand-md navbar-dark bg-dark">
                <div class="navbar-nav ml-auto">
                    <a class="nav-item nav-link" href="http://www.facebook.com">
                        <i class="fab fa-facebook-f fa-2x"></i>
                    </a>
                    <a class="nav-item nav-link" href="http://www.twitter.com">
                        <i class="fab fa-twitter fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
